{
  "name": "mfe-seed",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "dev": "npm-run-all -pl dev:*",
    "dev:fe": "vite",
    "dev:be": "NODE_NO_WARNINGS=1 tsx watch --experimental-strip-types --env-file=./src/.env src/backend/server.ts",
    "build": "rm -rf dist && npm run build:be && npm run build:fe",
    "build:fe": "vite build --mode production",
    "build:be": "node --env-file=src/.env.production build.js",
    "test": "vitest --config vite.config.js run --coverage",
    "lint": "eslint src",
    "check": "prettier --ignore-path .gitignore --check src/** --log-level warn",
    "check:fix": "prettier --ignore-path .gitignore --write {src,test}/; eslint --fix src"
  },
  "devDependencies": {
    "@hono/node-server": "^1.14.3",
    "@types/node": "^22.15.21",
    "@types/nunjucks": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.8",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "highlight.js": "^11.11.1",
    "hono": "^4.7.10",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "npm-run-all2": "^8.0.4",
    "nunjucks": "^3.2.4",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.89.2",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.37.0",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.1.1",
    "vitest": "^3.2.4"
  }
}
